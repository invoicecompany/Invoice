<% if dealer_signed_in? %>
    <h1>Ya has ingresa session como Distribuidor </h1>
<% else %>

<div class="formulario">

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, :class=>"etiqueta" %><br />
    <%= f.email_field :email, :class=>"email", autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, :class=>"etiqueta" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, :class=>"pass", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :class=>"etiqueta" %><br />
    <%= f.password_field :password_confirmation, :class=>"pass", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password, :class=>"etiqueta" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, :class=>"pass", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", :class=>"enviar" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
<% end %>
</div>